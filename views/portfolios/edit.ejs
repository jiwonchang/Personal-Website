<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= portfolio.name %></h1>
        
        <div style="width: 30%; margin: 25px auto;">
            <form action="/portfolio/<%= portfolio._id %>?_method=PUT" method="POST">
                <!-- the form-group class divs add spacing between the items in the form -->
                <div class="form-group">
                    <input class="form-control" name="portfolio[title]" type="text" value="<%= portfolio.title %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" name="portfolio[image]" type="text" value="<%= portfolio.image %>" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="portfolio[body]" required><%= portfolio.body %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            
            <a href="/portfolio/<%= portfolio._id %>">Go Back</a>
        </div>
        
    </div>
    
</div>

<% include ../partials/footer %>