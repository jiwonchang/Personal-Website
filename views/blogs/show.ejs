<% include ../partials/header %>

<div class="container content-beginning">
    <div class="row">
        <h1 style="text-align: center;"><%= blog.title %></h1>
        
        <div style="width: 60%; margin: 25px auto;">
            <img class="blog-show-img" src="<%= blog.image %>">
            <p><%= blog.body %></p>
            <a class="btn btn-warning" href="/blog/<%= blog._id %>/edit">Edit</a>
            <!-- triggers the DESTROY Route by sending a DELETE request to "/blogs/id". -->
            <!-- Again, we use method-override since HTML does not support DELETE requests by default -->
            <form id="delete" action="/blog/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
        
    </div>
    
</div>

<% include ../partials/footer %>