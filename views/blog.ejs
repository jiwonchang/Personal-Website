<% include ./partials/header %>

<div id="about-intro-photo" class="sixteen wide column">
    <div class="blog-background parallax background-div">
        <div class="layer">
            <div class="about-intro-text fade-in-text">My Blog</div>
            <h2 class="contact-subtitle delay-fade-in-text">A place for thoughts, dreams, and memories.</h2>
        </div>
    </div>
</div>

<!-- will need to put all the blog post data into a database; will also need to have a way to easily create blog posts -->
<div class="container">
    
    <% if (currentUser) { %>
    	<a type="button" class="btn btn-primary btn-lg" href="/blog/new" style="margin-top: 2em">Create New Post</a>
    <% } %>
    
    <div class="row flex" style="padding-top: 2em">
        <% blogs.forEach(function(blog) { %>
            <div class="col-lg-4 col-sm-6 col-xs-12">
    			<div class="thumbnail" style="border:none">
    				<!--<img class="thumb-img" src="/images/enigma.jpg">-->
    				<a href="/blog/<%= blog._id %>"><img class="blog-img" src="<%= blog.image %>"></a>
    				<div class="caption">
    				    <p style="color: gray"><span><%= blog.category %> &bull; <%= blog.created.toDateString() %></span></p>
    				    <a href="/blog/<%= blog._id %>"><h3 style="margin-top: 0"><%= blog.title %></h3></a>
                        <p><%- blog.body.substring(0, 100) + "..." %></p>
                        <a type="button" class="btn btn-success" href="/blog/<%= blog._id %>">Read More</a>
    				</div>
    			</div>
    		</div>
    	<% }); %>
	</div>
    
</div>

<% include ./partials/footer %>